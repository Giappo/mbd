#!/bin/bash

# Space before asterisk
perl -pi -w -e 's/a\*/a \*/g;' *.R
perl -pi -w -e 's/b\*/b \*/g;' *.R
perl -pi -w -e 's/c\*/c \*/g;' *.R
perl -pi -w -e 's/d\*/d \*/g;' *.R
perl -pi -w -e 's/e\*/e \*/g;' *.R
perl -pi -w -e 's/f\*/f \*/g;' *.R
perl -pi -w -e 's/g\*/g \*/g;' *.R
perl -pi -w -e 's/h\*/h \*/g;' *.R
perl -pi -w -e 's/i\*/i \*/g;' *.R
perl -pi -w -e 's/j\*/j \*/g;' *.R
perl -pi -w -e 's/k\*/k \*/g;' *.R
perl -pi -w -e 's/l\*/l \*/g;' *.R
perl -pi -w -e 's/m\*/m \*/g;' *.R
perl -pi -w -e 's/n\*/n \*/g;' *.R
perl -pi -w -e 's/o\*/o \*/g;' *.R
perl -pi -w -e 's/p\*/p \*/g;' *.R
perl -pi -w -e 's/q\*/q \*/g;' *.R
perl -pi -w -e 's/r\*/r \*/g;' *.R
perl -pi -w -e 's/s\*/s \*/g;' *.R
perl -pi -w -e 's/t\*/t \*/g;' *.R
perl -pi -w -e 's/u\*/u \*/g;' *.R
perl -pi -w -e 's/v\*/v \*/g;' *.R
perl -pi -w -e 's/w\*/w \*/g;' *.R
perl -pi -w -e 's/x\*/x \*/g;' *.R
perl -pi -w -e 's/y\*/y \*/g;' *.R
perl -pi -w -e 's/z\*/z \*/g;' *.R
perl -pi -w -e 's/0\*/0 \*/g;' *.R
perl -pi -w -e 's/1\*/1 \*/g;' *.R
perl -pi -w -e 's/2\*/2 \*/g;' *.R
perl -pi -w -e 's/3\*/3 \*/g;' *.R
perl -pi -w -e 's/4\*/4 \*/g;' *.R
perl -pi -w -e 's/5\*/5 \*/g;' *.R
perl -pi -w -e 's/6\*/6 \*/g;' *.R
perl -pi -w -e 's/7\*/7 \*/g;' *.R
perl -pi -w -e 's/8\*/8 \*/g;' *.R
perl -pi -w -e 's/9\*/9 \*/g;' *.R

# Space before slash
perl -pi -w -e 's/a\//a \//g;' *.R
perl -pi -w -e 's/b\//b \//g;' *.R
perl -pi -w -e 's/c\//c \//g;' *.R
perl -pi -w -e 's/d\//d \//g;' *.R
perl -pi -w -e 's/e\//e \//g;' *.R
perl -pi -w -e 's/f\//f \//g;' *.R
perl -pi -w -e 's/g\//g \//g;' *.R
perl -pi -w -e 's/h\//h \//g;' *.R
perl -pi -w -e 's/i\//i \//g;' *.R
perl -pi -w -e 's/j\//j \//g;' *.R
perl -pi -w -e 's/k\//k \//g;' *.R
perl -pi -w -e 's/l\//l \//g;' *.R
perl -pi -w -e 's/m\//m \//g;' *.R
perl -pi -w -e 's/n\//n \//g;' *.R
perl -pi -w -e 's/o\//o \//g;' *.R
perl -pi -w -e 's/p\//p \//g;' *.R
perl -pi -w -e 's/q\//q \//g;' *.R
perl -pi -w -e 's/r\//r \//g;' *.R
perl -pi -w -e 's/s\//s \//g;' *.R
perl -pi -w -e 's/t\//t \//g;' *.R
perl -pi -w -e 's/u\//u \//g;' *.R
perl -pi -w -e 's/v\//v \//g;' *.R
perl -pi -w -e 's/w\//w \//g;' *.R
perl -pi -w -e 's/x\//x \//g;' *.R
perl -pi -w -e 's/y\//y \//g;' *.R
perl -pi -w -e 's/z\//z \//g;' *.R
perl -pi -w -e 's/0\//0 \//g;' *.R
perl -pi -w -e 's/1\//1 \//g;' *.R
perl -pi -w -e 's/2\//2 \//g;' *.R
perl -pi -w -e 's/3\//3 \//g;' *.R
perl -pi -w -e 's/4\//4 \//g;' *.R
perl -pi -w -e 's/5\//5 \//g;' *.R
perl -pi -w -e 's/6\//6 \//g;' *.R
perl -pi -w -e 's/7\//7 \//g;' *.R
perl -pi -w -e 's/8\//8 \//g;' *.R
perl -pi -w -e 's/9\//9 \//g;' *.R


perl -pi -w -e 's/\)\//\) \//g;' *.R

# Space after slash
perl -pi -w -e 's/\/\(/\/ \(/g;' *.R

perl -pi -w -e 's/\/a/\/ a/g;' *.R
perl -pi -w -e 's/\/b/\/ b/g;' *.R
perl -pi -w -e 's/\/c/\/ c/g;' *.R
perl -pi -w -e 's/\/d/\/ d/g;' *.R
perl -pi -w -e 's/\/e/\/ e/g;' *.R
perl -pi -w -e 's/\/f/\/ f/g;' *.R
perl -pi -w -e 's/\/g/\/ g/g;' *.R
perl -pi -w -e 's/\/h/\/ h/g;' *.R
perl -pi -w -e 's/\/i/\/ i/g;' *.R
perl -pi -w -e 's/\/j/\/ j/g;' *.R
perl -pi -w -e 's/\/k/\/ k/g;' *.R
perl -pi -w -e 's/\/l/\/ l/g;' *.R
perl -pi -w -e 's/\/m/\/ m/g;' *.R
perl -pi -w -e 's/\/n/\/ n/g;' *.R
perl -pi -w -e 's/\/o/\/ o/g;' *.R
perl -pi -w -e 's/\/p/\/ p/g;' *.R
perl -pi -w -e 's/\/q/\/ q/g;' *.R
perl -pi -w -e 's/\/r/\/ r/g;' *.R
perl -pi -w -e 's/\/s/\/ s/g;' *.R
perl -pi -w -e 's/\/t/\/ t/g;' *.R
perl -pi -w -e 's/\/u/\/ u/g;' *.R
perl -pi -w -e 's/\/v/\/ v/g;' *.R
perl -pi -w -e 's/\/w/\/ w/g;' *.R
perl -pi -w -e 's/\/x/\/ x/g;' *.R
perl -pi -w -e 's/\/y/\/ y/g;' *.R
perl -pi -w -e 's/\/z/\/ z/g;' *.R
perl -pi -w -e 's/\/0/\/ 0/g;' *.R
